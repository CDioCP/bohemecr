      const mailto = `mailto:marthagch85@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
      window.location.href = mailto;
    });

    /*
      ‚úÖ Robust image loader
      Tries multiple possible locations/filenames so your bags appear even if:
      - Files are at root next to index.html
      - Files are inside /img/
      - Extensions are .jpg or .JPG
      - (Optional) spaces/underscores handled by adding variants below
    */
    function tryLoadInto(imgEl, candidates) {
      let i = 0;
      const test = () => {
        if (i >= candidates.length) {
          // Final fallback placeholder to avoid empty box
          imgEl.src = "https://placehold.co/800x600/f8f5f2/2c3e50?text=Foto+no+encontrada";
          console.warn("No se encontr√≥ imagen para:", imgEl.id, candidates);
          return;
        }
        const src = candidates[i++];
        const probe = new Image();
        probe.onload = () => { imgEl.src = src; };
        probe.onerror = test;
        probe.src = src;
      };
      test();
    }

    // Add/adjust names here to match your real files exactly if needed:
    const beigeBaseNames = [
      "bolso-de-sobre",             // expected
      "Bolso-de-sobre",             // capitalized
      "bolso de sobre",             // with spaces (if your file had spaces)
      "bolso_de_sobre"              // underscores variant
    ];
    const azulBaseNames = [
      "aura-azul",
      "Aura-Azul",
      "aura azul",
      "aura_azul"
    ];

    function buildCandidates(basenames) {
      const exts = [".jpg", ".JPG", ".jpeg", ".JPEG", ".png", ".PNG"];
      const prefixes = ["", "img/"]; // root or /img folder
      const list = [];
      for (const b of basenames) {
        for (const p of prefixes) {
          for (const e of exts) list.push(`${p}${b}${e}`);
        }
      }
      return list;
    }

    // Try to load both images with many variations
    tryLoadInto(document.getElementById("img-bolso"), buildCandidates(beigeBaseNames));
    tryLoadInto(document.getElementById("img-aura"), buildCandidates(azulBaseNames));
  </script>
